<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="List name"
        android:fontFamily="@font/noto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textProducts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="26 products"
        android:fontFamily="@font/noto"
        app:layout_constraintStart_toStartOf="@+id/textList"
        app:layout_constraintTop_toBottomOf="@+id/textList" />

    <TextView
        android:id="@+id/textModifiedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="13:45"
        android:fontFamily="@font/noto"
        app:layout_constraintBottom_toBottomOf="@+id/textProducts"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alex Copindean"
        android:fontFamily="@font/noto"
        app:layout_constraintEnd_toEndOf="@+id/textModifiedDate"
        app:layout_constraintTop_toTopOf="@+id/textList" />

</android.support.constraint.ConstraintLayout>