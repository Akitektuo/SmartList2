<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="List name"
        android:textColor="@color/black"
        android:fontFamily="@font/noto"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textProducts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/noto"
        android:text="26 products"
        android:textColor="@color/gray"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/textList"
        app:layout_constraintTop_toBottomOf="@+id/textList" />

    <TextView
        android:id="@+id/textModifiedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="13:45"
        android:textColor="@color/gray"
        android:textSize="12sp"
        android:fontFamily="@font/noto"
        app:layout_constraintBottom_toBottomOf="@+id/textProducts"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textOwner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alex Copindean"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:fontFamily="@font/noto"
        app:layout_constraintEnd_toEndOf="@+id/textModifiedDate"
        app:layout_constraintTop_toTopOf="@+id/textList" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textProducts" />

</android.support.constraint.ConstraintLayout>