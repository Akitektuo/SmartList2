<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:background="?android:attr/selectableItemBackground"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fontFamily="@font/noto"
        android:textSize="16sp"
        android:textColor="?attr/primaryTextColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textProducts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/noto"
        android:textColor="?attr/secondaryTextColor"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/textList"
        app:layout_constraintTop_toBottomOf="@+id/textList" />

    <TextView
        android:id="@+id/textModifiedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:textColor="?attr/secondaryTextColor"
        android:textSize="12sp"
        android:fontFamily="@font/noto"
        app:layout_constraintBottom_toBottomOf="@+id/textProducts"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textOwner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="?attr/primaryTextColor"
        android:fontFamily="@font/noto"
        app:layout_constraintEnd_toEndOf="@+id/textModifiedDate"
        app:layout_constraintTop_toTopOf="@+id/textList" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="?attr/secondaryTextColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textProducts" />

</androidx.constraintlayout.widget.ConstraintLayout>